<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			x:Class="TownFish.App.FeedItem"
			x:Name="pnlText"
			ColumnSpacing="0">
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="*" />
		<ColumnDefinition Width="*" />
	</Grid.ColumnDefinitions>
	<Grid.RowDefinitions>
		<RowDefinition Height="auto" />
		<RowDefinition Height="auto" />
		<RowDefinition Height="auto" />
		<RowDefinition Height="auto" />
	</Grid.RowDefinitions>

	<Image x:Name="imgIcon" Grid.ColumnSpan="2" Aspect="AspectFill"
		   Source="{Binding ImageSource}" />

	<Label x:Name="lblTitle" Grid.Row="1" Grid.ColumnSpan="2" Margin="6,0"
		   Font="Large" FontAttributes="Bold" TextColor="Black"
		   Text="{Binding Title}" />
		   <!--LineBreakMode="NoWrap"-->
	<Label x:Name="lblText" Grid.Row="2" Grid.ColumnSpan="2" Margin="6,0"
		   TextColor="Black"
		   Text="{Binding Text}" />

	<Label x:Name="lblTimeStamp" Grid.Row="3" Margin="6,0"
		   Font="Small" TextColor="Gray"
		   Text="{Binding TimeStamp}" />
	<Label x:Name="lblGroup" Grid.Row="3" Grid.Column="1" Margin="6,0"
		   Font="Small" TextColor="Gray" HorizontalOptions="End"
		   Text="{Binding Group}" />
</Grid>
